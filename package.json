{
  "name": "qa-portfolio",
  "version": "1.0.0",
  "private": true,
  "description": "QA Portfolio - Multi-framework Automated Testing Platform",
  "workspaces": [
    "playwright_ts",
    "playwright_py",
    "sdk"
  ],
  "scripts": {
    "install:all": "npm install",
    "install:ts": "cd playwright_ts && npm ci",
    "install:py": "cd playwright_py && pip install -r requirements.txt",
    "format": "prettier --write '**/*.{ts,js,json,md}'",
    "format:ts": "prettier --write 'playwright_ts/**/*.{ts,js,json}'",
    "lint": "eslint . --ext .ts,.js --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "lint:ts": "eslint 'playwright_ts/**/*.ts' --max-warnings 0",
    "lint:py": "cd playwright_py && flake8 .",
    "type-check": "npm run type-check:ts && npm run type-check:sdk",
    "type-check:ts": "cd playwright_ts && tsc --noEmit",
    "type-check:sdk": "cd sdk && tsc --noEmit",
    "validate": "npm run format:check && npm run lint && npm run type-check",
    "validate:ts": "npm run format:check && npm run lint:ts && npm run type-check:ts",
    "validate:py": "npm run format:py && npm run lint:py",
    "test": "npm run test:ts",
    "test:ts": "cd playwright_ts && npm test",
    "test:ts:login": "cd playwright_ts && npx playwright test --project=login-tests",
    "test:ts:e2e": "cd playwright_ts && npx playwright test --project=tests",
    "test:ts:a11y": "cd playwright_ts && npx playwright test tests/accessibility/",
    "test:ts:perf": "cd playwright_ts && npx playwright test tests/perfomance/",
    "test:py": "cd playwright_py && pytest",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:clean": "docker compose down -v",
    "docker:rebuild": "docker compose up --build -d",
    "docker:logs": "docker compose logs -f",
    "docker:logs:ts": "docker compose logs -f playwright_ts",
    "docker:logs:py": "docker compose logs -f playwright_py",
    "docker:logs:mongo": "docker compose logs -f mongo",
    "test:docker:ts": "docker compose exec -T playwright_ts npm test",
    "test:docker:py": "docker compose exec -T playwright_py pytest",
    "clean": "npm run clean:ts && npm run clean:py && npm run clean:docker",
    "clean:ts": "cd playwright_ts && rm -rf playwright-report test-results allure-results allure-report",
    "clean:py": "cd playwright_py && rm -rf .pytest_cache htmlcov .coverage test-results",
    "clean:docker": "docker compose down -v && docker system prune -f",
    "ci:prepare": "npm run docker:up && sleep 10",
    "ci:test:all": "npm run test:docker:ts && npm run test:docker:py",
    "ci:cleanup": "npm run docker:down",
    "precommit": "npm run validate",
    "prepush": "npm run validate && npm test"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-plugin-playwright": "^1.5.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "qa",
    "automation",
    "testing",
    "playwright",
    "typescript",
    "python",
    "e2e",
    "integration-tests",
    "multi-framework"
  ],
  "author": "QA Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/qa-portfolio.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/qa-portfolio/issues"
  },
  "homepage": "https://github.com/yourusername/qa-portfolio#readme"
}
