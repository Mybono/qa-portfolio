{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": ".",              
    "paths": {
      "sdk/*": [
        "../sdk/*"
      ],
      "@fixtures/*": ["fixtures/*"],
      "@pages/*": ["pages/*"],
      "@tests/*": ["tests/*"]
    },
    "types": [
      "@playwright/test",
      "node"
    ],
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": [
    "tests/**/*.ts",
    "config/**/*.ts",
    "constants/**/*.ts",
    "interfaces/collections.ts"
  ]
}
